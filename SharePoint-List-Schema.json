{
  "listName": "Deliverables",
  "description": "Project deliverables tracking list for PowerApps integration",
  "template": "GenericList",
  "enableVersioning": true,
  "enableAttachments": true,
  "contentTypesEnabled": false,
  "columns": [
    {
      "name": "Title",
      "displayName": "Title",
      "type": "Text",
      "required": true,
      "maxLength": 255,
      "description": "Deliverable title or name",
      "showInDefaultView": true,
      "indexed": true
    },
    {
      "name": "Description",
      "displayName": "Description",
      "type": "Note",
      "required": false,
      "richText": false,
      "numberOfLines": 6,
      "description": "Detailed description of the deliverable",
      "showInDefaultView": true
    },
    {
      "name": "Status",
      "displayName": "Status",
      "type": "Choice",
      "required": false,
      "choices": [
        "Not Started",
        "In Progress",
        "In Review",
        "Completed"
      ],
      "defaultValue": "Not Started",
      "description": "Current status of the deliverable",
      "showInDefaultView": true,
      "indexed": true
    },
    {
      "name": "Owner",
      "displayName": "Owner",
      "type": "User",
      "required": false,
      "allowMultiple": false,
      "selectionMode": "PeopleOnly",
      "description": "Person responsible for this deliverable",
      "showInDefaultView": true
    },
    {
      "name": "DueDate",
      "displayName": "Due Date",
      "type": "DateTime",
      "required": false,
      "format": "DateOnly",
      "description": "Target completion date",
      "showInDefaultView": true,
      "indexed": true
    },
    {
      "name": "Priority",
      "displayName": "Priority",
      "type": "Choice",
      "required": false,
      "choices": [
        "Low",
        "Medium",
        "High"
      ],
      "defaultValue": "Medium",
      "description": "Priority level of the deliverable",
      "showInDefaultView": true
    }
  ],
  "views": [
    {
      "name": "All Items",
      "default": true,
      "columns": [
        "Title",
        "Status",
        "Priority",
        "Owner",
        "DueDate"
      ],
      "sortBy": "DueDate",
      "sortAscending": true
    },
    {
      "name": "Active Deliverables",
      "default": false,
      "filter": "Status ne 'Completed'",
      "columns": [
        "Title",
        "Status",
        "Priority",
        "Owner",
        "DueDate"
      ],
      "sortBy": "Priority",
      "sortAscending": false
    },
    {
      "name": "Overdue",
      "default": false,
      "filter": "DueDate lt [Today] and Status ne 'Completed'",
      "columns": [
        "Title",
        "Status",
        "Owner",
        "DueDate"
      ],
      "sortBy": "DueDate",
      "sortAscending": true
    },
    {
      "name": "My Deliverables",
      "default": false,
      "filter": "Owner eq [Me]",
      "columns": [
        "Title",
        "Status",
        "Priority",
        "DueDate",
        "Description"
      ],
      "sortBy": "DueDate",
      "sortAscending": true
    }
  ],
  "permissions": {
    "breakInheritance": false,
    "recommendedLevels": [
      {
        "role": "Read",
        "description": "For team members who need to view deliverables"
      },
      {
        "role": "Contribute",
        "description": "For team members who manage deliverables"
      },
      {
        "role": "Full Control",
        "description": "For project managers and administrators"
      }
    ]
  },
  "sampleData": [
    {
      "Title": "Design mockups for homepage",
      "Description": "Create initial design concepts for the new homepage layout including color schemes, typography, and component placement",
      "Status": "In Progress",
      "Priority": "High",
      "DueDate": "2026-01-25"
    },
    {
      "Title": "Database schema review",
      "Description": "Review and optimize the current database schema for performance improvements and scalability",
      "Status": "Not Started",
      "Priority": "Medium",
      "DueDate": "2026-02-01"
    },
    {
      "Title": "User acceptance testing",
      "Description": "Conduct UAT sessions with key stakeholders to validate features against requirements",
      "Status": "In Review",
      "Priority": "High",
      "DueDate": "2026-01-18"
    },
    {
      "Title": "API documentation",
      "Description": "Complete comprehensive API documentation for all endpoints with examples and authentication details",
      "Status": "Completed",
      "Priority": "Medium",
      "DueDate": "2026-01-06"
    },
    {
      "Title": "Security audit",
      "Description": "Perform comprehensive security audit covering authentication, authorization, data validation, and OWASP top 10",
      "Status": "In Progress",
      "Priority": "High",
      "DueDate": "2026-01-21"
    },
    {
      "Title": "Mobile responsiveness testing",
      "Description": "Test application functionality and UI on various mobile devices, browsers, and screen sizes",
      "Status": "Not Started",
      "Priority": "Low",
      "DueDate": "2026-02-10"
    }
  ],
  "notes": [
    "This list is designed to work with the Deliverables Tracker PowerApp",
    "Column internal names must match exactly for PowerApp integration",
    "Choice field values must match exactly (case-sensitive)",
    "The PowerApp expects these specific column names and types",
    "You can add additional columns after initial setup, but update the PowerApp accordingly"
  ]
}
